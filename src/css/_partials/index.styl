.delete-background-image-button
  line-height 1.2
  .octicon + span
    margin-left 6px
    font-size 12px

.reset-button
  margin 2% 0
  text-align right
  button
    font-size .8em
.figlet-container
  min-height 50%
  position relative

pre
  margin 0
  line-height 1
  white-space pre-wrap
  display block
  text-align center
  word-wrap normal
  overflow auto
  padding 16px
  line-height 1.2
  font-size 12px
  cursor default
  user-select none

code
  font-size 11px
  font-family Consolas, "Liberation Mono", Menlo, Courier, monospace
  white-space pre
  max-width initial
  padding 0
  margin 0
  overflow initial
  line-height inherit
  word-wrap normal
  border 0

.getter
  position absolute
  bottom 0
  left 0
  z-index 1

.download-button
  display inline-block
  a
    color inherit
    text-decoration none
    opacity .3
    display inline-block
    padding .4em .6em
    font-size 13px
    &:hover
      opacity 1
      background $color_dark
      color $color_light
    .octicon
      margin-right .4em

.copy-button
  display inline-block
  button
    color inherit
    opacity .3
    appearance none
    padding .4em .6em
    font-size 13px
    border 0
    background none
    outline none
    &.zeroclipboard-is-hover
      opacity 1
      background $color_dark
      color $color_light
    .octicon
      margin-right .4em
